{
  "authors": [
    {
      "name": "Studio Meta",
      "email": "agence@studiometa.fr"
    }
  ],
  "license": "MIT",
  "type": "project",
  "require": {
    "php": "^7.0",
    "vlucas/phpdotenv": "^3.4",
    "johnpbloch/wordpress": "^5.2",
    "timber/timber": "^1.10",
    "studiometa/wp-mu-cleanup": "^1.0",
    "studiometa/wp-assets": "dev-feature/v2",
    <%_ if (wpRocket) { _%>
    "wp-media/wp-rocket": "^3.3",
    <%_ } _%>
    <%_ if (wordfence) { _%>
    "wpackagist-plugin/wordfence": "^7.4",
    <%_ } _%>
    <%_ if (classicEditor) { _%>
    "wpackagist-plugin/classic-editor": "^1.5",
    <%_ } _%>
    <%_ if (yoastSeo) { _%>
    "yoast/wordpress-seo": "^12.9",
    <%_ } _%>
    <%_ if (acf) { _%>
    "advanced-custom-fields/advanced-custom-fields-pro": "^5.0.0",
    <%_ } _%>
    "lkwdwrd/wp-muplugin-loader": "^1.0"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.4",
    "wp-coding-standards/wpcs": "^2.1",
    "wp-cli/wp-cli-bundle": "^2.2",
    "dealerdirect/phpcodesniffer-composer-installer": "^0.5.0",
    "phpstan/phpstan": "^0.12.50",
    "szepeviktor/phpstan-wordpress": "^0.6.3",
    "satesh/phpcs-gitlab-report": "^1.0"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    },
    <%_ if (acf) { _%>
    {
      "type": "package",
      "package": {
        "name": "advanced-custom-fields/advanced-custom-fields-pro",
        "version": "5.7.12",
        "type": "wordpress-plugin",
        "dist": {
          "type": "zip",
          "url": "https://connect.advancedcustomfields.com/index.php?a=download&p=pro&k={%ACF_PRO_KEY}&t={%version}"
        },
        "require": {
          "composer/installers": "^1.4",
          "ffraenz/private-composer-installer": "^2.0"
        }
      }
    },
    <%_ } _%>
    {
      "type": "vcs",
      "url": "https://github.com/tabrisrp/wp-background-processing"
    },
    {
      "type": "vcs",
      "url": "https://github.com/studiometa/wp-assets"
    }
  ],
  "scripts": {
    "db:export": "bin/db-export.sh",
    "db:import": "bin/db-import.sh",
    "post-install-cmd": [
      "bin/cleanup-composer-install.sh",
      "bin/generate-wp-config.sh"
    ],
    "post-update-cmd": [
      "bin/cleanup-composer-install.sh",
      "bin/generate-wp-config.sh"
    ],
    "phpstan": "phpstan analyse --memory-limit=512M",
    "test": "echo 'No test specified' && exit 0",
    "lint": "phpcs -s --colors --extensions=php --standard=./phpcs.xml"
  },
  "config": {
    "optimize-autoloader": true
  },
  "extra": {
    "installer-types": [
      "library",
      "wordpress-plugin",
      "wordpress-theme",
      "wordpress-muplugin",
      "wordpress-dropin"
    ],
    "installer-paths": {
      "web/wp-content/plugins/{$name}/": [
        "type:wordpress-plugin"
      ],
      "web/wp-content/themes/{$name}/": [
        "type:wordpress-theme"
      ],
      "web/wp-content/mu-plugins/{$name}/": [
        "type:wordpress-muplugin"
      ],
      "web/wp-content/{$name}/": [
        "type:wordpress-dropin"
      ]
    },
    "wordpress-install-dir": "web/wp/"
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
