    "@fullhuman/postcss-purgecss": "^2.2.0",
    "@studiometa/browserslist-config": "^1.0.1",
    "@studiometa/eslint-config": "^2.1.2",
    "@studiometa/prettier-config": "^2.0.1",
    "@studiometa/prettier-formatter-gitlab": "^1.0.0",
    "@studiometa/stylelint-config": "^2.0.0",
    "@studiometa/tailwind-config": "^1.0.1",
    "@studiometa/webpack-config": "^2.0.1",
    "autoprefixer": "^9.8.0",
    "cssnano": "^4.1.10",
    "eslint": "^7.2.0",
    "eslint-formatter-gitlab": "^2.0.0",
    "lodash.merge": "^4.6.2",
    "prettier": "^2.0.5",
    "prettier-plugin-twig-melody": "^0.4.6",
    "stylelint": "^13.6.1",
    "stylelint-formatter-gitlab": "^1.0.1",
    "tailwindcss": "^1.6.2"
  },
  "dependencies": {
    "@studiometa/js-toolkit": "^1.0.0-alpha.9"
  }
